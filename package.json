{
  "name": "lexiconica",
  "version": "0.1.5b",
  "description": "Lexiconica is a 5th edition Dungeons & Dragons campaign management utility developed to be SRD Compliant.",
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ],
  "main": "client/public/electron.js",
  "author": {
    "name": "Phazingazrael",
    "email": "phazedverse@gmail.com",
    "url": "http://phazingazrael.github.io"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\" \"yarn electron client/public/electron.js\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "heroku-postbuild": "npm install --only=dev --no-shrinkwrap && npm run build && cd client && npm install --only=dev --no-shrinkwrap",
    "server": "nodemon server.js",
    "start": "node client/server.js"
  },
  "dependencies": {
    "@lexical/react": "^0.2.5",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "level": "^8.0.0",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "lexical": "^0.2.5",
    "nodemon": "^2.0.16",
    "subleveldown": "^6.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "concurrently": "^7.1.0",
    "electron": "^18.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "lexiconica"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
